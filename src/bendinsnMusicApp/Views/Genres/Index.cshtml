@using bendinsnMusicApp.Models
@model IEnumerable<bendinsnMusicApp.Models.Genre>

@{
    ViewData["Title"] = "Genre List";
}

<h2>Index</h2>
<a asp-controller="Genres" asp-action="Add">Add Genre</a><br /><br />

<table>
    <thead>
    <th>Genre Name</th>
    </thead>
    @foreach (var genre in Model)
    {
        <tr>
            <td>
                <a asp-action="Albums" asp-controller="Genres" asp-route-id=@genre.GenreID>@genre.Name</a>
            </td>
        </tr>

    }
</table>

